{
  "openapi": "3.0.1",
  "info": {
    "title": "Simple Credit API",
    "version": "1.0.1",
    "description": "API minimalista con autenticaci√≥n contextual por usuario loggeado"
  },
  "servers": [
    {
      "url": "https://backend.springonly.com",
      "description": "Servidor Spring Only"
    }
  ],
  "paths": {
    "/api/customers": {
      "get": {
        "operationId": "listCustomers",
        "summary": "Lista los clientes pertenecientes al usuario loggeado",
        "responses": {
          "200": {
            "description": "Lista de clientes visibles para el usuario actual",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "customerId": {
                        "type": "string"
                      },
                      "customerName": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}