{
  "openapi": "3.0.1",
  "info": {
    "title": "Simple Credit API",
    "version": "1.0.0",
    "description": "Minimal API with a single GET endpoint"
  },
  "servers": [
    {
      "url": "https://backend.springonly.com",
      "description": "Spring Only server"
    }
  ],
  "paths": {
    "/api/customers": {
      "get": {
        "operationId": "listCustomers",
        "summary": "List customers",
        "responses": {
          "200": {
            "description": "A list of customers",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "customerId": { "type": "string" },
                      "customerName": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
