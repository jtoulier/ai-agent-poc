{
  "openapi": "3.0.1",
  "info": {
    "title": "SpringOnly Backend API",
    "version": "1.0.0",
    "description": "API REST para la gestión de clientes, préstamos y pagos en el sistema SpringOnly."
  },
  "servers": [
    {
      "url": "https://backend.springonly.com",
      "description": "Servidor principal de SpringOnly"
    }
  ],
  "paths": {
    "/api/customers": {
      "get": {
        "operationId": "getCustomers",
        "summary": "Obtener la lista de clientes visibles para el usuario actual",
        "parameters": [
          {
            "name": "X-Relationship-Manager-Id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "x-ms-dynamic-value": "relationshipManagerId",
            "description": "Identificador único del usuario loggeado (proporcionado por la app o thread)."
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes visibles para el usuario actual",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Customer"
                  }
                }
              }
            }
          },
          "401": {
            "description": "No autorizado: falta o es inválido el header X-Relationship-Manager-Id"
          }
        }
      },
      "post": {
        "operationId": "createCustomer",
        "summary": "Registrar un nuevo cliente en el sistema",
        "parameters": [
          {
            "name": "X-Relationship-Manager-Id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "x-ms-dynamic-value": "relationshipManagerId",
            "description": "Identificador único del usuario loggeado (proporcionado por la app o thread)."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Customer"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente creado exitosamente"
          },
          "400": {
            "description": "Solicitud inválida"
          },
          "401": {
            "description": "No autorizado: falta o es inválido el header X-Relationship-Manager-Id"
          }
        }
      }
    },
    "/api/loans": {
      "post": {
        "operationId": "createLoan",
        "summary": "Crear un nuevo préstamo asociado a un cliente existente",
        "parameters": [
          {
            "name": "X-Relationship-Manager-Id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "x-ms-dynamic-value": "relationshipManagerId",
            "description": "Identificador único del usuario loggeado (proporcionado por la app o thread)."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Loan"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Préstamo creado exitosamente"
          },
          "400": {
            "description": "Solicitud inválida"
          },
          "401": {
            "description": "No autorizado: falta o es inválido el header X-Relationship-Manager-Id"
          }
        }
      }
    },
    "/api/loans/{loanId}": {
      "get": {
        "operationId": "getLoanById",
        "summary": "Obtener el detalle de un préstamo por su identificador",
        "parameters": [
          {
            "name": "loanId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "X-Relationship-Manager-Id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "x-ms-dynamic-value": "relationshipManagerId",
            "description": "Identificador único del usuario loggeado (proporcionado por la app o thread)."
          }
        ],
        "responses": {
          "200": {
            "description": "Detalles del préstamo solicitado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Loan"
                }
              }
            }
          },
          "404": {
            "description": "Préstamo no encontrado"
          }
        }
      },
      "patch": {
        "operationId": "updateLoan",
        "summary": "Actualizar los datos de un préstamo existente",
        "parameters": [
          {
            "name": "loanId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "X-Relationship-Manager-Id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "x-ms-dynamic-value": "relationshipManagerId",
            "description": "Identificador único del usuario loggeado (proporcionado por la app o thread)."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Loan"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Préstamo actualizado exitosamente"
          },
          "400": {
            "description": "Solicitud inválida"
          },
          "404": {
            "description": "Préstamo no encontrado"
          }
        }
      }
    },
    "/api/payments": {
      "post": {
        "operationId": "createPayment",
        "summary": "Registrar un nuevo pago asociado a un préstamo",
        "parameters": [
          {
            "name": "X-Relationship-Manager-Id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "x-ms-dynamic-value": "relationshipManagerId",
            "description": "Identificador único del usuario loggeado (proporcionado por la app o thread)."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Payment"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pago registrado exitosamente"
          },
          "400": {
            "description": "Solicitud inválida"
          },
          "401": {
            "description": "No autorizado: falta o es inválido el header X-Relationship-Manager-Id"
          }
        }
      }
    },
    "/api/payments/{loanId}/{paymentNumber}": {
      "get": {
        "operationId": "getPaymentById",
        "summary": "Obtener el detalle de un pago específico dado el préstamo y número de cuota",
        "parameters": [
          {
            "name": "loanId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "paymentNumber",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "X-Relationship-Manager-Id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "x-ms-dynamic-value": "relationshipManagerId",
            "description": "Identificador único del usuario loggeado (proporcionado por la app o thread)."
          }
        ],
        "responses": {
          "200": {
            "description": "Detalles del pago solicitado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Payment"
                }
              }
            }
          },
          "404": {
            "description": "Pago no encontrado"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "properties": {
          "customerId": {
            "type": "integer"
          },
          "customerName": {
            "type": "string"
          },
          "documentNumber": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "Loan": {
        "type": "object",
        "properties": {
          "loanId": {
            "type": "integer"
          },
          "customerId": {
            "type": "integer"
          },
          "currencyId": {
            "type": "string"
          },
          "principalAmount": {
            "type": "number",
            "format": "double"
          },
          "interestRate": {
            "type": "number",
            "format": "double"
          },
          "numberOfMonthlyPayments": {
            "type": "integer"
          }
        }
      },
      "Payment": {
        "type": "object",
        "properties": {
          "loanId": {
            "type": "integer"
          },
          "paymentNumber": {
            "type": "integer"
          },
          "dueDate": {
            "type": "string",
            "format": "date"
          },
          "principalAmount": {
            "type": "number",
            "format": "double"
          },
          "interestAmount": {
            "type": "number",
            "format": "double"
          },
          "totalPaymentAmount": {
            "type": "number",
            "format": "double"
          },
          "paymentStateId": {
            "type": "string"
          },
          "writtenAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}